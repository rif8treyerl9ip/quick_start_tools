{
	"Docker build": {
		"prefix": "db",
		"body": [
			"docker build \\",
			"  -t \"<image_name>:$(whoami)\" \\",
			"  -f ./dockerfile \\",
			"  .",
		],
	},
	"Docker run": {
		"prefix": "dr",
		"body": [
			"docker run -it --rm \\",
			"  --name  \"<image_name>-$(whoami)\" \\",
			"  --gpus all \\",
			"  -v \"$(pwd):/workspace\" \\",
			"  <image_name>:latest",
		],
	}
}
